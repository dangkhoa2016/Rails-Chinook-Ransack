<style>
  .invoice-lines-table {
    min-height: 300px;
  }
  .employee-address {
    min-width: 300px;
  }
</style>

<div class='mb-4 employees-table table-responsive'>
  <table class='table table-bordered table-striped table-hover'>
    <thead class='thead-light'>
      <tr>
        <th colspan='2' class='text-center'>Personal Information</th>
        <th class='text-center'>Address</th>
        <th colspan='2' class='text-center'>Contact Information</th>
        <th colspan='3' class='text-center'>Other Information</th>
        <th></th>
      </tr>
      <tr>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'first_name') %>
        </th>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'last_name') %>
        </th>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'address') %>
        </th>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'phone') %>
        </th>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'email') %>
        </th>
        <th class='text-nowrap'>
          <%= build_sort_link('employee', 'reporting_to') %>
        </th>
        <th class='text-nowrap'>Customers Count</th>
        <th class='text-nowrap'>Title/Timestamp</th>
        <th class='text-center'>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.first_name, employee %></td>
          <td><%= link_to employee.last_name, employee %></td>

          <td class='employee-address'>
            <div class='dropdown'>
              <button class='btn btn-link text-dark btn-sm dropdown-toggle text-decoration-none px-0'
                type='button' id='dropdownAddress<%= employee.id %>'
                data-bs-toggle='dropdown' aria-expanded='false' data-bs-auto-close='outside'>
                <%= employee.address %>
              </button>
              <ul class='dropdown-menu' aria-labelledby='dropdownAddress<%= employee.id %>'>
                <li class='px-3'><strong>State:</strong> <%= employee.state %></li>
                <li class='px-3'><strong>City:</strong> <%= employee.city %></li>
                <li class='px-3'><strong>Country:</strong> <%= employee.country %></li>
                <li class='px-3'><strong>Postal Code:</strong> <%= employee.postal_code %></li>
                <li class='px-3'><strong>Address:</strong> <%= employee.address %></li>
              </ul>
            </div>
          </td>

          <td>
            <div class='dropdown'>
              <button class='btn btn-link text-dark btn-sm dropdown-toggle text-decoration-none px-0'
                type='button' id='dropdownPhone<%= employee.id %>'
                data-bs-toggle='dropdown' aria-expanded='false' data-bs-auto-close='outside'>
                <%= employee.phone %>
              </button>
              <ul class='dropdown-menu' aria-labelledby='dropdownPhone<%= employee.id %>'>
                <li class='px-3 text-nowrap'><strong>Fax:</strong> <%= employee.fax %></li>
                <li class='px-3 text-nowrap'><strong>Phone:</strong> <%= employee.phone %></li>
              </ul>
            </div>
          </td>
          <td><%= employee.email %></td>
          
          <td class='text-nowrap'>
						Managed by: <%= employee.reporting_to&.full_name %>
						<br/>
						Subordinates Count: <%= employee.subordinates_count %>
					</td>
          <td><%= link_to employee.customers_count, employee %></td>
          <td>
            <div class='dropdown'>
              <button class='btn btn-link text-dark btn-sm dropdown-toggle text-decoration-none px-0'
                type='button' id='dropdownOtherInfo<%= employee.id %>'
                data-bs-toggle='dropdown' aria-expanded='false' data-bs-auto-close='outside'>
                <%= employee.title %>
              </button>
              <ul class='dropdown-menu' aria-labelledby='dropdownOtherInfo<%= employee.id %>'>
                <li class='px-3 text-nowrap'><strong>Title:</strong> <%= employee.title %></li>
                <li class='px-3 text-nowrap'><strong>Birth Date:</strong> <%= employee.birth_date %></li>
                <li class='px-3 text-nowrap'><strong>Hire Date:</strong> <%= employee.hire_date %></li>
                <li class='px-3 text-nowrap'><strong>Created At:</strong> <%= employee.created_at %></li>
                <li class='px-3 text-nowrap'><strong>Updated At:</strong> <%= employee.updated_at %></li>
                <li class='px-3 text-nowrap'><strong><%= link_to 'View employee', employee %></strong></li>
              </ul>
            </div>
          </td>

          <td class='text-center'>
            <div class='dropdown'>
              <button class='btn btn-secondary btn-sm dropdown-toggle'
                type='button' id='dropdownActions<%= employee.id %>'
                data-bs-toggle='dropdown' aria-expanded='false'>
                Actions
              </button>
              <ul class='dropdown-menu' aria-labelledby='dropdownActions<%= employee.id %>'>
                <li>
                  <%= link_to employee, class: 'dropdown-item' do %>
                    <i class='bi bi-eye'></i> View
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_employee_path(employee), class: 'dropdown-item text-warning' do %>
                    <i class='bi bi-pencil'></i> Edit
                  <% end %>
                </li>
                <li>
                  <%= link_to employee, method: :delete,
                    data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' },
                    class: 'dropdown-item text-danger' do %>
                    <i class='bi bi-trash'></i> Delete
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
