
<div style='color: green'><%= notice %></div>

<div class='d-flex justify-content-between align-items-center'>
  <div>
    <h1 class='d-inline mb-0'>Employees</h1>
    <span class='text-muted'>(
      <%= @filters.present? ? 'filtered: ' : 'all: ' %>
      <%= pluralize(@pagy.count, 'record') %>
    )</span>
  </div>
  <div>
    <%= link_to 'New', new_employee_path, class: 'btn btn-primary' %>
    <div class='btn-group' role='group'>
      <button type='button' class='btn btn-success' title='Click to change display mode to table'>
        <i class='bi bi-list'></i>
        <span class='visually-hidden'>Table</span>
      </button>
      <button type='button' class='btn btn-secondary' title='Click to change display mode to card'>
        <i class='bi bi-grid'></i>  
        <span class='visually-hidden'>Card</span>
      </button>
    </div>
  </div>
</div>

<%= render 'shared/filter_form', filter_model: 'Employee' %>

<div id='employees' class='py-4'>
  <% if @pagy.count.zero? %>
    <div class='alert alert-warning' role='alert'>
      No employees found
    </div>
  <% else %>
    <%= render 'employees/table' %>

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>

<%= link_to 'New employee', new_employee_path %>
