<%= render 'shared/display_record', record: employee do %>
  <%= render_columns(employee) do |column, value| %>
    <% if column[:field] == 'reporting_to' %>
      <% if employee.reporting_to %>
        <strong><%= Employee.human_attribute_name('reports_to') %>:</strong> <%= link_to employee.reporting_to %>
      <% elsif employee.reports_to.present? %>
        <strong><%= Employee.human_attribute_name('manager_id') %>:</strong> <%= employee.reports_to %>
      <% else %>
        <strong><%= Employee.human_attribute_name('manager_id') %>:</strong> <%= Employee.human_attribute_name('no_manager') %>
      <% end %>
    <% else %>
      <% render_default(column, value, employee) %>
    <% end %>
  <% end %>
<% end %>
