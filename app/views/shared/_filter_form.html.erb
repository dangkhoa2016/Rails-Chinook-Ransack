<% filter_model = defined?(locals) ? locals[:filter_model] : (defined?(filter_model) ? filter_model : @filter_model) %>
<% has_filters = @filter_list.present? %>

<div class='filter-wrap my-4' data-controller='filter'
  data-filter-model-value='<%= filter_model %>'
  data-filter-btn-remove-outlet='[data-btn-remove-element-to-remove-value]'>
  <div class='accordion' id='accordionExample'>
    <div class='accordion-item border-0'>
      <div id='simple-filter' class='accordion-collapse collapse<%= has_filters ? nil : " show" %>'
        data-bs-parent='#accordionExample'>
        <div class='accordion-body p-0'>
          <%= form_with url: get_index_url_for_model(filter_model),
            class: 'd-flex simple-form', method: :get do |f| %>
            <div class='input-group me-2'>
              <button class='btn btn-outline-primary' type='button'
              data-bs-toggle='collapse' data-bs-target='#advanced-filter'
              aria-expanded='false' aria-controls='advanced-filter'>Toggle advanced search</button>
              <%= f.text_field :q, value: params[:q], class: 'form-control me-2',
                type: 'search', 'aria-label': 'Search', placeholder: 'Search...' %>
            </div>
            <button class='btn btn-secondary' type='submit'>Search</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class='accordion-item border-0'>
      <div id='advanced-filter' class='accordion-collapse collapse<%= has_filters ? " show" : nil %>'
        data-bs-parent='#accordionExample'>
        <div class='accordion-body p-0'>
          <div class='buttons'>
            <button class='btn btn-outline-secondary' type='button'
              data-bs-toggle='collapse' data-bs-target='#simple-filter'
              aria-expanded='false' aria-controls='simple-filter'
              >Toggle simple search</button>
            <div class="btn-group" role="group" aria-label="Tools">
              <button class='btn btn-primary' type='button'
                data-bs-toggle='offcanvas' data-bs-target='#filter-panel'
                aria-controls='filter-panel'>
                Add filters
              </button>
              <button class='btn btn-dark' type='button' data-bs-toggle='collapse'
                data-bs-target='#toggle-filter-cards' aria-expanded='false'
                aria-controls='toggle-filter-cards'>Toggle filter cards</button>
            </div>

            <%= link_to 'Clear filters', 'javascript:void(0)', class: 'btn btn-secondary btn-clear-filters', data: { action: 'filter#clearFilters'} %>
            <%= link_to 'Clear inputs', 'javascript:void(0)', class: 'btn btn-dark btn-clear-inputs', data: { action: 'filter#clearInputs' } %>
          </div>

          <div class='collapse show' id='toggle-filter-cards'>
            <div class='pt-3'>
              <%= form_with url: get_index_url_for_model(filter_model),
                class: 'advanced-form', method: :get do |f| %>

                <div class='filter-holder row row-cols-1 row-cols-sm-2 row-cols-xl-5 row-cols-lg-4 row-cols-md-3 gx-3 gy-2'>
                  <%= render 'shared/selected_filters', filters: @filter_list %>

                  <div class='loading d-none col'>
                    <div class='card'>
                      <div class='card-body text-center'>
                        <button type='button'
                          class='btn-close d-none btn-remove-filter position-absolute'
                          aria-label='Remove'></button>
                        <span class='d-block'>
                          <span class='filter-action'></span>
                          <span class='filter-name'></span>
                        </span>
                        <div class='spinner-border mt-2' role='status'>
                          <span class='visually-hidden'>Loading...</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class='mt-3'>
                  <%= f.submit 'Search', class: 'btn btn-primary', name: '' %>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class='offcanvas offcanvas-end' tabindex='-1' id='filter-panel' aria-labelledby='filter-panel-label'>
    <div class='offcanvas-header'>
      <h5 class='offcanvas-title' id='filter-panel-label'>Add filters</h5>
      <button type='button' class='btn-close' data-bs-dismiss='offcanvas' aria-label='Close'></button>
    </div>
    <div class='offcanvas-body'>
      <div class='available-filters mt-2'>
        <h5>Avaliable filters</h5>
        <%= select_tag 'filter-fields', search_fields_for_select(filter_model),
          multiple: true,
          data: { placeholder: 'Select filters...' } %>
      </div>
      <div class='d-flex justify-content-between mt-4'>
        <button class='btn btn-primary btn-add-selected' disabled='true' type='button' data-action='filter#addSelected'>Add selected</button>
        <button class='btn btn-secondary btn-remove-selected' disabled='true' type='button' data-action='filter#removeSelected'>Remove selected</button>
      </div>

      <div class='template-filters mt-4' data-controller='choices'>
        <h5>Template filters</h5>
        <%= select_tag 'filter-templates', filter_templates_for_select(filter_model),
          data: { placeholder: 'Select a template...', choices_target: 'select' } %>
    </div>
  </div>
</div>
