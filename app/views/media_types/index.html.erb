<p style='color: green'><%= notice %></p>

<div class='d-flex justify-content-between align-items-center mb-4'>
  <h1 class='mb-0'>Media Types</h1>
  <%= link_to 'New', new_media_type_path, class: 'btn btn-primary' %>
</div>

<div id='media_types' class='my-4 row row-cols-1 row-cols-sm-2 row-cols-xl-5 row-cols-lg-4 row-cols-md-3 g-4'>
  <% @media_types.each do |media_type| %>
    <div class='col'>
      <%= render media_type %>
    </div>
  <% end %>
</div>

<div class='pagination'>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

<%= link_to 'New media type', new_media_type_path %>
