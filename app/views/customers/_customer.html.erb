<%= render 'shared/display_record', record: customer do %>
  <%= render_columns(customer) do |column, value| %>
    <% if column[:field] == 'support_rep' %>
      <% if customer.support_rep %>
        <strong><%= Customer.human_attribute_name('support_rep') %>:</strong> <%= link_to customer.support_rep %>
      <% elsif customer.support_rep_id.present? %>
        <strong><%= Customer.human_attribute_name('support_rep') %>:</strong> <%= customer.support_rep_id %>
      <% else %>
        <strong><%= Customer.human_attribute_name('support_rep') %>:</strong> <%= Customer.human_attribute_name('no_support_rep_assigned') %>
      <% end %>
    <% else %>
      <% render_default(column, value, customer) %>
    <% end %>
  <% end %>
<% end %>
